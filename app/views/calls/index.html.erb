<div class = "container">
  <div class = "col-x-12 col-sm-10 sol-sm-offset-1">
    <h1 class="text-center"> <%= @app.name.capitalize %></h1>
    <table class="table">
      <thead>
        <tr>
           <th>Call Uuid</th>
           <th>Caller</th>
           <th>From Id</th>
           <th>Start Date</th>
           <th>End Date</th>
           <th>Duration (s)</th>
           <th> Voicemail? </th>
        </tr>
      </thead>
      <tbody>
        <% @calls.each do |call| %>
          <tr>
            <th> <%= link_to call.uuid, call_path(call) %></th>
            <% %w(caller_name caller_id start_time end_time duration).each do |prop| %>
              <th> <%= call.send(prop) %> </th>
            <% end %>
            <% if call.voice_mail %>
              <th> <%= call.voice_mail.url %></th>
            <% else %>
              <th>False</th>
            <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>

  </div>

</div>
